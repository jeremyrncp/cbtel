{% extends 'base.html.twig' %}

{% block title %}Prospect index{% endblock %}

{% block body %}
    <h1>Prospects</h1>
<br />
    <a href="{{ path('app_prospect_new') }}" class="btn btn-primary">Nouveau</a>
<br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Activity</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Createdat</th>
                <th>Commentary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td>{{ prospect.id }}</td>
                <td>{{ prospect.company }}</td>
                <td>{{ prospect.activity }}</td>
                <td>{{ prospect.address }}</td>
                <td>{{ prospect.postalCode }}</td>
                <td>{{ prospect.city }}</td>
                <td>{{ prospect.phone }}</td>
                <td>{{ prospect.mobile }}</td>
                <td>{{ prospect.email }}</td>
                <td>{{ prospect.createdat ? prospect.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prospect.commentary }}</td>
                <td>
                    <a href="{{ path('app_prospect_show', {'id': prospect.id}) }}">show</a>
                    <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
