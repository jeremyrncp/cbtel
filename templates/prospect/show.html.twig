{% extends 'base.html.twig' %}

{% block title %}Prospect{% endblock %}

{% block body %}
    <h1>Prospect</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Société</th>
                <td>{{ prospect.company }}</td>
            </tr>
            <tr>
                <th>Activité</th>
                <td>{{ prospect.activity }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ prospect.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ prospect.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ prospect.city }}</td>
            </tr>
            <tr>
                <th>Téélphone</th>
                <td>{{ prospect.phone }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ prospect.mobile }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ prospect.email }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ prospect.commentary }}</td>
            </tr>
            <tr>
                <th>Rappel</th>
                <td>{{ prospect.rappel ? prospect.rappel|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rendez vous</th>
                <td>{{ prospect.rendezvous ? prospect.rendezvous|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}" class="btn btn-primary">éditer</a>

    <br />
    {{ include('prospect/_delete_form.html.twig') }}

    <br />
    <a href="{{ path('app_prospect_index') }}">retourner à la liste</a>

{% endblock %}
