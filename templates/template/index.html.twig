{% extends 'base.html.twig' %}

{% block title %}Templates{% endblock %}

{% block body %}
    <h1>Templates</h1>
    <a href="{{ path('app_template_new') }}" class="btn btn-primary">Nouveau</a>


    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.name }}</td>
                <td>{{ template.type }}</td>
                <td>{{ template.content }}</td>
                <td>
                    <a href="{{ path('app_template_show', {'id': template.id}) }}">visualiser</a>
                    <a href="{{ path('app_template_edit', {'id': template.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
