{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>
    <br />
    <div class="text-right">
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">Nouveau</a>
    </div>
    <br /><br />
    <table class="table">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Fonction</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe (hash)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.fonction }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">visualiser</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Ã©diter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
