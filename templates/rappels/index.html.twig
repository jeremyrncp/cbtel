{% extends 'base.html.twig' %}

{% block title %}Rappels{% endblock %}

{% block body %}
    <h1>Rappels</h1>
    <br />  {{ form(filterForm) }}
<br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Activity</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Rappel</th>
                <th>Rendez-vous</th>
                <th>Commentary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td>{{ prospect.id }}</td>
                <td>{{ prospect.company }}</td>
                <td>{{ prospect.activity }}</td>
                <td>{{ prospect.address }}</td>
                <td>{{ prospect.postalCode }}</td>
                <td>{{ prospect.city }}</td>
                <td>{{ prospect.phone }}</td>
                <td>{{ prospect.mobile }}</td>
                <td>{{ prospect.email }}</td>
                <td>{{ prospect.rappel ? prospect.rappel|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prospect.rendezvous ? prospect.rendezvous|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prospect.commentary }}</td>
                <td>
                    <a href="{{ path('app_prospect_show', {'id': prospect.id}) }}">visualiser</a>
                    <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination">
        {{ knp_pagination_render(prospects) }}
    </div>

{% endblock %}
